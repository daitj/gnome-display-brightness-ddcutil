<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="display-brightness-ddcutil">
  <schema id="org.gnome.shell.extensions.display-brightness-ddcutil"
    path="/org/gnome/shell/extensions/display-brightness-ddcutil/">
    <key type="b" name="show-all-slider">
      <default>false</default>
      <summary>Enables the All Slider</summary>
    </key>
    <key type="b" name="only-all-slider">
      <default>false</default>
      <summary>Hides display list and uses only All Slider</summary>
    </key>
    <key type="b" name="show-internal-slider">
      <default>false</default>
      <summary>Enables the slider for any internal display</summary>
    </key>
    <key type="b" name="show-sliders-in-submenu">
      <default>false</default>
      <summary>Shows sliders as submenu of All Slider</summary>
    </key>
    <key type="b" name="show-value-label">
      <default>false</default>
      <summary>Show Value Label</summary>
    </key>
    <key type="b" name="show-display-name">
      <default>true</default>
      <summary>Show Display Name</summary>
    </key>
    <key type="b" name="show-osd">
      <default>true</default>
      <summary>Enables OSD</summary>
    </key>
    <key type="i" name="button-location">
      <default>0</default>
      <range min="0" max="1" />
      <summary>Brightness Button Location</summary>
    </key>
    <key type="b" name="hide-system-indicator">
      <default>false</default>
      <summary>Hides System Indicator</summary>
    </key>
    <key type="d" name="position-system-indicator">
      <range min="0" max="15" />
      <default>0</default>
      <summary>Sets position of icon in system indicator</summary>
    </key>
    <key type="d" name="position-system-menu">
      <range min="0" max="13" />
      <default>3</default>
      <summary>Sets position in system menu</summary>
    </key>
    <key type="as" name="increase-brightness-shortcut">
      <default><![CDATA[['<Control>XF86MonBrightnessUp']]]></default>
      <summary>Increase Brightness Shortcut</summary>
    </key>
    <key type="as" name="decrease-brightness-shortcut">
      <default><![CDATA[['<Control>XF86MonBrightnessDown']]]></default>
      <summary>Decrease Brightness Shortcut</summary>
    </key>
    <key type="d" name="step-change-keyboard">
      <range min="1" max="100" />
      <default>2</default>
      <summary>Step change % when using keyboard shortcut</summary>
    </key>
    <key type="s" name="ddcutil-binary-path">
      <default><![CDATA['/usr/bin/ddcutil']]></default>
      <summary>Location of the ddcutil binary to use</summary>
    </key>
    <key type="s" name="ddcutil-additional-args">
      <default><![CDATA['']]></default>
      <summary>Additional arguments for ddcutil when setting brightness</summary>
    </key>
    <key type="d" name="ddcutil-sleep-multiplier">
      <range min="4" max="200" />
      <default>40</default>
      <summary>`ddcutil` sleep multiplier in ms, tweak it around to make brightness update faster.</summary>
    </key>
    <key type="d" name="ddcutil-queue-ms">
      <range min="130" max="1000" />
      <default>130</default>
      <summary>`ddcutil` call queue time in ms, tweak it around to make brightness update faster.</summary>
    </key>
    <key type="b" name="vcp-10">
      <default>true</default>
      <summary>Use VCP code 10</summary>
    </key>
    <key type="b" name="vcp-6b">
      <default>false</default>
      <summary>Use VCP code 6B</summary>
    </key>
    <key type="b" name="allow-zero-brightness">
      <default>false</default>
      <summary>Allow zero brightness</summary>
    </key>
    <key type="b" name="disable-display-state-check">
      <default>false</default>
      <summary>Disable display state check</summary>
    </key>
    <key type="b" name="verbose-debugging">
      <default>false</default>
      <summary>Verbose debugging</summary>
    </key>
  </schema>
</schemalist>
